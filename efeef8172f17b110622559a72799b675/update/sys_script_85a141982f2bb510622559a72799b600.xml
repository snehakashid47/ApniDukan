        <script><![CDATA[// Business Rule script on the 'orders' table
(function executeRule(current, previous /*null when async*/) {
    // Get the entered pincode
    var pincode = current.pincode;

    // Query the 'postaldata' table
    var postalData = new GlideRecord('postaldata');
    postalData.addQuery('pincode', pincode);
    postalData.query();

    // If a matching record is found, update the 'city' field in 'orders'
    if (postalData.next()) {
        current.city = postalData.city;
    }
})(current, previous);
